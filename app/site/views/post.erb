<article class="post">

  <header class="post-header">
    <h1 class="post-title"><a href="/<%=@post[:title].parameterize("-")%>/<%=@post[:id]%>"><%=@post[:title]%></a></h1>
    <header class="post-meta" style='margin-bottom:60px;'>
      <p class="post-date" datetime="<%=@post[:created_at].strftime("%d %B %Y")%>"><%=@post[:created_at].strftime("%d %B %Y")%> by <%=@post.user[:username]%></p>
    </header>
  </header>

  <section class="post-content">
    <%==@post[:content]%>
  </section>

</article>
